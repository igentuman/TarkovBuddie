<Window x:Class="TarkovBuddie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TarkovBuddie"
        xmlns:views="clr-namespace:TarkovBuddie.Views"
        mc:Ignorable="d"
        Title="TarkovBuddie" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Map">
                <views:MapView/>
            </TabItem>
            <TabItem Header="Quest Tracker">
                <views:QuestTrackerView/>
            </TabItem>
            <TabItem Header="Items Tracker">
                <views:ItemsTrackerView/>
            </TabItem>
            <TabItem Header="Settings">
                <views:SettingsView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
