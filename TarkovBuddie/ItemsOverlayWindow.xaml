<Window x:Class="TarkovBuddie.ItemsOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Items Overlay" 
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="False"
        Topmost="True"
        Width="90"
        Height="500"
        Left="10"
        Top="50">
    <Grid Background="Transparent">
        <Border Background="Transparent" CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Transparent">
                <ItemsControl ItemsSource="{Binding PinnedItems}" Background="Transparent" Padding="2">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="42" Width="64" Margin="1" Background="#802D2D2D" ToolTip="{Binding DisplayName}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding ShortName}" FontSize="8" Foreground="White" TextTrimming="CharacterEllipsis" TextAlignment="Center" Padding="2,1,2,0"/>
                                <Grid Grid.Row="1">
                                    <Image Source="{Binding IconPath}" Width="32" Height="32" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2,0,0,0"/>
                                    <TextBlock FontSize="10" Foreground="#90EE90" FontWeight="Bold" TextAlignment="Right" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,2,2">
                                        <Run Text="{Binding CurrentQuantity, Mode=OneWay}"/><Run Text="/"/><Run Text="{Binding RequiredQuantity, Mode=OneWay}"/>
                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
