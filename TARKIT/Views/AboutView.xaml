            <!-- Description -->
            <TextBlock Text="An offline companion tool for Escape from Tarkov" FontSize="13" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#333333" TextAlignment="Center"/>
            <TextBlock Text="Provides map overlays, quest tracking, and item management" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#666666" TextAlignment="Center"/>
            
            <!-- Separator -->
