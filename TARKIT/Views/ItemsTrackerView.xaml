<UserControl x:Class="TARKIT.Views.ItemsTrackerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TARKIT.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <local:BoolToColorConverter x:Key="PinBackgroundConverter"/>
        <local:StringToImageConverter x:Key="StringToImageConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F5F5F5" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Search:" VerticalAlignment="Center" FontWeight="Medium" Margin="0,0,10,0"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200" Padding="5" VerticalAlignment="Center"/>

                <CheckBox IsChecked="{Binding ShowOnlyIncomplete}" 
                          Content="Show Only Incomplete" 
                          Margin="20,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding FilteredItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="10"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="120" Height="160" Margin="5" Background="#FFFFFF" 
                                BorderThickness="1" BorderBrush="#DDDDDD" CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="64"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{Binding ShortName}" 
                                           TextAlignment="Center" FontSize="10" Foreground="#666666"
                                           Padding="5,2,5,2" TextTrimming="CharacterEllipsis"/>

                                <Grid Grid.Row="1" Background="#F9F9F9" Margin="5">
                                    <Image Source="{Binding IconPath, Converter={StaticResource StringToImageConverter}}" 
                                           Stretch="Uniform"/>
                                </Grid>

                                <TextBlock Grid.Row="2" Text="{Binding DisplayName}" 
                                           TextAlignment="Center" FontSize="10" FontWeight="Medium"
                                           Padding="5,2,5,2" TextTrimming="CharacterEllipsis" TextWrapping="Wrap"
                                           MaxHeight="30"/>

                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" 
                                            Margin="5,3,5,3">
                                    <TextBlock Text="{Binding CurrentQuantity}" Foreground="#0078D4" 
                                               FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,2,0"/>
                                    <TextBlock Text="/" Foreground="#999999" VerticalAlignment="Center" Margin="0,0,2,0"/>
                                    <TextBlock Text="{Binding RequiredQuantity}" Foreground="#999999" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" 
                                            Margin="5,3,5,5">
                                    <Button Content="-" Width="25" Height="22" Padding="0"
                                            Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" FontSize="12" Margin="0,0,2,0"/>
                                    <Button Content="+" Width="25" Height="22" Padding="0"
                                            Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" FontSize="12" Margin="0,0,2,0"/>
                                    <Button Content="ðŸ“Œ" Width="25" Height="22" Padding="0"
                                            Command="{Binding DataContext.TogglePinCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="{Binding IsPinned, Converter={StaticResource PinBackgroundConverter}}"
                                            FontSize="10"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
