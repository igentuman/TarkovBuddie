<Window x:Class="TARKIT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TARKIT"
        xmlns:views="clr-namespace:TARKIT.Views"
        mc:Ignorable="d"
        Height="800" Width="1440">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Map Selector -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{views:Translate ui, label.select_map}" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                <ComboBox x:Name="MapSelector" 
                          ItemsSource="{Binding MapViewModel.AvailableMaps}"
                          SelectedItem="{Binding MapViewModel.SelectedMap}"
                          Width="150" 
                          Padding="5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{views:Translate ui, label.press}" Foreground="#666666" FontSize="11"/>
                    <TextBlock Text="{Binding MapOverlayHotKeyDisplay, Mode=OneWay}" Foreground="#0078D4" FontWeight="Bold" Margin="5,0"/>
                    <TextBlock Text="{views:Translate ui, label.to_toggle_overlay}" Foreground="#666666" FontSize="11"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1">
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="{views:Translate ui, tab.map}"/>
                </TabItem.Header>
                <views:MapView DataContext="{Binding MapViewModel}" Padding="10"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="{views:Translate ui, tab.quests}"/>
                </TabItem.Header>
                <views:QuestTrackerView DataContext="{Binding QuestTrackerViewModel}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="{views:Translate ui, tab.items}"/>
                </TabItem.Header>
                <views:ItemsTrackerView DataContext="{Binding ItemsTrackerViewModel}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="{views:Translate ui, tab.settings}"/>
                </TabItem.Header>
                <views:SettingsView/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="{views:Translate ui, tab.about}"/>
                </TabItem.Header>
                <views:AboutView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
