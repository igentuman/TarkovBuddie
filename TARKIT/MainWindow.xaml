<Window x:Class="TARKIT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TARKIT"
        xmlns:views="clr-namespace:TARKIT.Views"
        mc:Ignorable="d"
        Title="TARKIT | v1.0-beta" Height="800" Width="1440">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Map Selector -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Select Map:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                <ComboBox x:Name="MapSelector" 
                          ItemsSource="{Binding MapViewModel.AvailableMaps}"
                          SelectedItem="{Binding MapViewModel.SelectedMap}"
                          Width="150" 
                          Padding="5"/>
                <TextBlock Margin="20,0,0,0" VerticalAlignment="Center" FontSize="11" Foreground="#666666">
                    <Run Text="Press "/>
                    <Run Text="{Binding MapOverlayHotKeyDisplay, Mode=OneWay}" Foreground="#0078D4" FontWeight="Bold"/>
                    <Run Text=" to toggle overlay"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1">
            <TabItem Header="Map">
                <views:MapView DataContext="{Binding MapViewModel}" Padding="10"/>
            </TabItem>
            <TabItem Header="Quest Tracker">
                <views:QuestTrackerView DataContext="{Binding QuestTrackerViewModel}"/>
            </TabItem>
            <TabItem Header="Items Tracker">
                <views:ItemsTrackerView DataContext="{Binding ItemsTrackerViewModel}"/>
            </TabItem>
            <TabItem Header="Settings">
                <views:SettingsView/>
            </TabItem>
            <TabItem Header="About">
                <views:AboutView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
