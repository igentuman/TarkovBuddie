<Window x:Class="TARKIT.QuestsOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quests Overlay" 
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="False"
        Topmost="True"
        Width="250"
        Height="500"
        Left="10"
        Top="50">
    <Grid Background="Transparent">
        <Border Background="Transparent" CornerRadius="4" Padding="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Transparent">
                <ItemsControl ItemsSource="{Binding PinnedQuests}" Background="Transparent">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Height="Auto" Margin="1" Background="#802D2D2D" Padding="4" CornerRadius="2">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" FontSize="12" Foreground="White" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,2"/>
                                    <TextBlock Text="{Binding ShortDescription}" FontSize="10" Foreground="#90EE90" TextWrapping="Wrap" Margin="0,0,0,2"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
